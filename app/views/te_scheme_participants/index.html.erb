<article>
  <h1>TE Scheme Participants: <%= @scheme.name %></h1>
  <nav>
    <ul>
      <li><%= link_to "< back to Scheme", @scheme %></li>
      <li><%= link_to "New", new_te_scheme_participant_path(@scheme) %></li>
    </ul>
  </nav>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Links</th>
      </tr>
    </thead>
    <tbody>
      <% @participants.each do |participant| %>
        <tr>
          <td><%= participant.name %></td>
          <td><%= link_to "show", te_scheme_participant_path(@scheme, participant) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>